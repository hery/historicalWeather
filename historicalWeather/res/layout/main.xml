		 android:id="@+id/progressBar"
		 android:max="100"/> 			-->
    
    <TextView
        android:id="@+id/testString"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="" />
    
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/rev_bw"
        android:layout_marginTop="10dip" />

