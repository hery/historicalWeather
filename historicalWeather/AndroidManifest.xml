<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.daemgahe.historicalWeather"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
    
    <application
        android:icon="@drawable/weather_temp"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name=".HistoricalWeatherActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="DateScreen" android:label="@string/dateScreenTitle"></activity>
        <activity android:name="GraphScreen" android:label="@string/graphScreenTitle"></activity>
        <activity android:name="DataScreen" android:label="@string/dataScreenTitle"></activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>